---
import HeroSection from '../components/HeroSection.astro';
import Layout from '../layouts/Layout.astro';
import NameCard from '../components/NameCard.astro';
import { Image, Picture } from '@astrojs/image/components';
import ContentSection from '../components/ContentSection.astro';

import introImage1 from '../assets/images/introImage1.jpg';
import introImage2 from '../assets/images/introImage2.jpg';

import ProjectIcon from '../components/ProjectIcon.astro';
---

<Layout
  title="Martin Frommel"
  description={'Amateur Rock Fondler 🧗‍♂️, Web Artisan (just like making sourdough, but for the Internet) 🌍 and a Music Tech Teacher 👨‍🏫'}
>
  <HeroSection>
    <section
      id="heroLeft"
      class="block group relative basis-1/2 mt-24 mb-6 lg:mb-16 shrink"
      slot="heroImageLeft"
    >
      <NameCard
        className={'z-auto transition-all ease-in-out-quad w-full h-full -skew-y-3 xl:group-hover:-translate-x-[3%] xl:group-hover:-rotate-3'}
      />
      <Image
        class="transition-all ease-in-out-quad absolute min-w-0 portrait:md:w-40 w-[30%] -top-[40%] xl:left-3/4 -z-10 rounded-lg md:rounded-xl xl:rounded-3xl drop-shadow-lg -rotate-2 xl:group-hover:rotate-2 xl:group-hover:translate-x-[10%] xl:group-hover:-translate-y-[12%]"
        src={introImage1}
        alt="Climbing"
        width={350}
        aria-hidden={true}
        format={'webp'}
        quality={100}
      />
      <Image
        class="transition-all ease-in-out-quad z-10 absolute min-w-0 w-[30%] top-[55%] left-3/4 rounded-lg md:rounded-xl xl:rounded-3xl drop-shadow-lg rotate-2 xl:group-hover:rotate-6 xl:group-hover:translate-x-[5%] xl:group-hover:translate-y-[7%]"
        src={introImage2}
        alt="Studio Work"
        width={350}
        aria-hidden={true}
        format={'webp'}
        quality={100}
      />
    </section>
    <div class="block text-left">
      <h1 class="text-3xl lg:text-6xl mb-3" slot="title">And I'm a...</h1>
      <div class="hidden" id="typewriter">
        <p>Teacher</p>
        <p>Sound Engineer</p>
        <p>Music Producer</p>
        <p>Web Developer</p>
        <p>Web Designer</p>
        <p>Climber</p>
      </div>
      <span
        id="typed"
        class="prose text-3xl lg:text-4xl text-transparent bg-clip-text bg-brand font-extrabold"
        slot="subtitle"></span>
      <p class="italic prose mt-4 text-sm">
        scroll to find out more about me...
      </p>
    </div>
  </HeroSection>
  <div class="bg-brand-light max-w-full overflow-hidden">
    <ContentSection
      id="intro"
      class="p-10 prose leading-loose tracking-wider flex flex-none flex-row max-md:flex-wrap justify-start items-start min-w-full md:space-x-12 text-center md:text-justify group"
      ><div>
        <h1
          class="mix-blend-difference text-transparent bg-clip-text bg-gradient-to-br from-slate-800 to-brand round group-hover:bg-[50%_50%]"
        >
          We live in a time of great change, and this is reflected not only in
          the areas of human life, but also in the ever-changing media and
          technology.
        </h1>
      </div><div>
        <h2
          class="mix-blend-difference text-transparent bg-clip-text bg-gradient-to-br from-slate-800 to-brand md:mt-3"
        >
          The world has gone from one to many screens. In these turbulent times,
          I offer unique creative solutions for the use of sound and visual
          material.
        </h2>
      </div>
    </ContentSection>
    <ContentSection
      class={'flex flex-col flex-nowrap justify-start items-center p-10 group'}
    >
      <ContentSection
        class={'flex prose flex-row flex-nowrap justify-start items-center leading-loose tracking-wider text-center'}
      >
        <h1
          class="text-[#b3b8b3] group-hover:text-brand-dark transition-all ease-in-out-back"
        >
          Find out what I'm up to...
        </h1>
      </ContentSection>
      <ContentSection
        class={'flex flex-row flex-nowrap flex-1 justify-evenly items-center space-x-6 text-5xl py-3 text-[#b3b8b3]'}
      >
        <ProjectIcon
          href="https://github.com/martinfrommel"
          iconSet="brands"
          icon="github"
          class={'my-3 hover:text-[#171515]'}
          alt={'My GitHub account'}
        />
        <ProjectIcon
          href="https://twitter.com/frommel_martin"
          iconSet="brands"
          icon="twitter"
          class={'my-3 hover:text-[#00acee]'}
          alt={'My Twitter'}
        />
        <ProjectIcon
          href="https://tidal.com/browse/artist/20269946"
          iconSet="solid"
          icon="podcast"
          class={'my-3 hover:text-slate-900'}
          alt={'My music projects on Tidal'}
        />
        <ProjectIcon
          href="https://facebook.com/martinfrommelcz"
          iconSet="brands"
          icon="facebook"
          class={'my-3 hover:text-[#3b5998]'}
          alt={'My Facebook account'}
        />
      </ContentSection>
    </ContentSection>
  </div>
</Layout>

<script>
  // start typed.js
  import Typed from 'typed.js';

  const options = {
    stringsElement: '#typewriter',
    typeSpeed: 40,
    backSpeed: 20,
    contentType: 'html',
    loop: true,
    shuffle: false,
    backDelay: 2500,
  };

  const typedHero = new Typed('#typed', options);
  //   end typed.js
</script>
